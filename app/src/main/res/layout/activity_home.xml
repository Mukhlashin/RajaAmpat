<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.homeActivity.HomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navbarnye"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3295A8"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Jendela Raja Ampat"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imb_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_settings" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/lra" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="#F8F8F8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frm_common_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/ban1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="239dp"
                    android:background="#40005ACC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frm_common_services"
                android:background="@drawable/backhome" />

            <LinearLayout
                android:id="@+id/judulnye"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="175dp"
                android:background="@drawable/button_cornera"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="- Common Services -"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menunye"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/judulnye"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/popup_corner"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_emergency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_cornerbki"
                    android:drawableTop="@drawable/ic_emergency"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Emergency Call"
                    android:textAllCaps="false"
                    android:textColor="#616161" />

                <Button
                    android:id="@+id/btn_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:drawableTop="@drawable/ic_transport"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:text="Transport"
                    android:textAllCaps="false"
                    android:textColor="#616161" />

                <Button
                    android:id="@+id/btn_currency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_cornerbka"
                    android:drawableTop="@drawable/ic_currency"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Currency"
                    android:textAllCaps="false"
                    android:textColor="#616161" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menunye"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_feature_corner"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_pengaduan"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center|bottom"
                    android:paddingTop="19dp"
                    android:paddingBottom="10dp"
                    android:text="Pengaduan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/btn_travel"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_feature_corner"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_tujuan_wisata"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center|bottom"
                    android:paddingTop="9dp"
                    android:paddingBottom="10dp"
                    android:text="Travel Destination"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr_1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/btn_news"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_feature_corner"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_news"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center|bottom"
                    android:paddingTop="9dp"
                    android:paddingBottom="10dp"
                    android:text="News"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/btn_hotel"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_feature_corner"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_hotel"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center|bottom"
                    android:paddingTop="19dp"
                    android:paddingBottom="10dp"
                    android:text="Hotel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/real_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>