<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_list_pengaduan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorMenuButtonYellow"
        android:text="List Pengaduan"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppinsmedium"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="start|center"
        android:drawablePadding="40dp"
        android:drawableStart="@drawable/ic_chart"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_profile"/>

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorMenuButtonGreen"
        android:text="Edit Profile"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppinsmedium"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="start|center"
        android:drawablePadding="40dp"
        android:drawableStart="@drawable/ic_avatar"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorMenuButtonBlu"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppinsmedium"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="start|center"
        android:drawablePadding="40dp"
        android:drawableStart="@drawable/ic_logout"
        android:paddingLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>