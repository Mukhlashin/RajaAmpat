<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/img_report"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/img_report_back"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/detail_report_back"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/img_report">

            <TextView
                android:id="@+id/tv_pelapor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="left|center"
                android:text="Pelapor : Narto Syaifuden"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_judul_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="right|center"
                android:layout_marginEnd="15dp"
                android:text="Jalan rusak berbahaya"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppinsmedium"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="end"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_back"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_status_report"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsregular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pengaduan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jalan Rusak Dan Berlubang, Lokasi Di Jalan Merdeka KM 02 Raja Ampat Sangat Membahayakan Bagi Pengguna Jalan "
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppinsmedium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppinsbold"/>

            <ImageView
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/lra"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/tv_respon_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jalan yang rusak di jalan Merdeka KM 02 akan segera diperbaiki oleh Dinas Pekerjaan Umum"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppinsmedium"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>