<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lnr_police"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/contact_item_back"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/img_logo_instance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|start"
            android:background="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_instance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center|start"
                android:text="Police" />

            <TextView
                android:id="@+id/tv_instance_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center|start"
                android:text="0811-1000-224"
                android:textColor="@color/colorTextContact"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>